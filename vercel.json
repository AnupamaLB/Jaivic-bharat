{
  "version": 2,
  "name": "jaivic-bharat",
  "public": true,
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "css/*.css",
      "use": "@vercel/static"
    },
    {
      "src": "js/*.js",
      "use": "@vercel/static"
    },
    {
      "src": "images/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*\\.(css|js|ico|jpg|jpeg|png|gif|svg|pdf))",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/about",
      "destination": "/about.html"
    },
    {
      "source": "/principles",
      "destination": "/founding-principles.html"
    },
    {
      "source": "/programs",
      "destination": "/programs.html"
    },
    {
      "source": "/stakeholders",
      "destination": "/stakeholders.html"
    },
    {
      "source": "/media",
      "destination": "/media.html"
    },
    {
      "source": "/join",
      "destination": "/join.html"
    }
  ],
  "env": {
    "SITE_NAME": "Jaivic Bharat",
    "SITE_DESCRIPTION": "Nature-Aligned Living Platform"
  },
  "cleanUrls": true,
  "trailingSlash": false
}